	*{
		
	}
		body{
			margin :0;
			padding:0;
			width:100vw;
			height:100vh;
		}
		
		.picture-container{
			width:100vw;
			flex-wrap:wrap;
			display:flex;
			position:relative;
		}

		.vector-picture{
			width:100%;
			height:100%;
			/*float:left;*/
		position:relative;
		}
		.vector-picture img{
			width:100vw;
			height:100vh;
			z-index:1;

		}
		.slipper{
			position:absolute;
			bottom:30px;
			right: 300px;
			z-index:3;
			transition: transform .2s;
		}
		.mirror{
			position:absolute;
			bottom: 100px;
			left:150px;
			z-index:2;
			transition: transform .2s;
		}	
		
		.bed{
			position:absolute;
			bottom: 100px;
			left:700px;
			z-index:2;
			transition: transform .2s;
		}
		.cabinet{
			position:absolute;
			bottom: 100px;
			left:400px;
			z-index:2;
		transition: transform .2s;
		}
		.stand{
			position:absolute;
			bottom: 100px;
			right:150px;
			z-index:2;
			transition: transform .2s;
		}

		.stand:hover, .mirror:hover, .bed:hover, .slipper:hover, .cabinet:hover{
			-ms-transform:scale(1.2);
			-webkit-transform:scale(1.2);
			transform:scale(1.2);
		}


.overlay {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
  transition: .5s ease;
  background-color: none;
}

.picture:hover .overlay {
  opacity: 1;
}

.text {
  color: black;
  font-size: 20px;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
}



</style>

