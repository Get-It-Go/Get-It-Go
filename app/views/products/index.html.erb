    <span style="font-size:30px;padding:20px;margin-top:30px;cursor:pointer" onclick="openNav()" class='menu'>&#9776; </span>

    
  
  </nav>
  <div class='search'>
    <%= form_tag(products_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "검색어를 입력하세요" %>
    <%= submit_tag "검색", name: nil %>
    <% end %>
    </div>
    </nav>
  <p>
  <%= image_tag 'logo.png' , style: 'height: 13%; width: 13%; align="center"' %>
</p>
   <script>
  function openNav() {
      document.getElementById("mySidenav").style.width = "250px";
  }
   function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
  }
  </script>
  
  <p id="notice"><%= notice %></p>



<h1><%=@cate%></h1>

  <div class="main_section">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <img src="<%= product.image.url %>" height=200 width=200 class='img'>
              <h5 class="card-title">&nbsp;<%= product.name %></h5>
              <p class="card-text">
                <% if product.status %>
          <div class = 'complete'>&nbsp;&nbsp;나눔 완료</div>
          <% else %>
          <div /class = 'yet'>&nbsp;나눔 가능<div>
          <% end %>
                &nbsp; |가격| : 1000  &nbsp; |수령 장소| : <%= product.delivery %>

              </p>
            </div>    
          <div class="middle">
              <a href="/products/<%= product.id %>" class="btn btn-primary btn-spec">상세보기</a>
          </div>
        </div>
      </div>

      <% end %>
    </div>    
  </div> 
    

  

