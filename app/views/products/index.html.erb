<p>
  <%= form_tag(products_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "검색어를 입력하세요" %>
    <%= submit_tag "검색", name: nil %>
  <% end %>
</p>
<h1><%=@cate%> Products</h1>


<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Content</th>
      <th>Status</th>
      <th>Price</th>
      <th>Address num</th>
      <th>Address text</th>
      <th>Address text2</th>
      <th>User_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.category %></td>
        <td><%= product.name %></td>
        <td><%= product.content %></td>
        <td><%= product.status %></td>
        <td><%= product.price %></td>
        <td><%= product.address_num %></td>
        <td><%= product.address_text %></td>
        <td><%= product.address_text2 %></td>
        <td><%= product.user_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to '거래완료',  "products/#{product.id}/complete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

