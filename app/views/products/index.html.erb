  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="/products">All</a>
    <a href="/products?cate=가구">가구</a>
    <a href="/products?cate=청소">청소 도구</a>
    <a href="/products?cate=욕실">욕실 용품</a>
    <a href="/products?cate=세탁">세탁 도구</a>
    <a href="/products?cate=주방">주방 용품</a>
    <a href="/products?cate=문구">문구류</a>
    <a href="/products?cate=생활잡화">생활잡화</a>
    <a href="/products?cate=식품">식품</a>
  </div>
  <nav>
    <span style="font-size:30px;padding:50px;margin-top:30px;cursor:pointer" onclick="openNav()">&#9776; </span>
  </nav>
   <script>
  function openNav() {
      document.getElementById("mySidenav").style.width = "250px";
  }
   function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
  }
  </script>
  
  <div class="main_section">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <img src="<%= product.image.url %>" height=150 width=150 class='img'>
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">
                <% if product.status %>
          <div class = 'complete'>나눔 완료</div>
          <% else %>
          <div class = 'yet'>나눔 가능</div>
          <% end %>
                |가격| : 1000   |수령 장소| : <%= product.delivery %>

              </p>
            </div>    
          <div class="middle">
              <a href="/products/<%= product.id %>" class="btn btn-primary btn-spec">상세보기</a>
          </div>
        </div>
      </div>

      <% end %>
    </div>    
  </div> 
    

  

